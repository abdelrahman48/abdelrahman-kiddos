- var title = "Kiddos"
include pug/mixins
doctype
html(lang="en")
    include pug/head
    body
        // Google Tag Manager (noscript)
        noscript
            iframe(src="https://www.googletagmanager.com/ns.html?id=GTM-5P66W7N"
            height="0" width="0" style="display:none;visibility:hidden")
        // End Google Tag Manager (noscript)

        //- span.window-size.fixed 0
        include pug/contact
        include pug/nav

        // Start Slider
        section.header-slider.relative
            .slider-container.flex
                -
                    var arr = [
                    {class: 'active', img: 'slider-1', text1: 'Kids Are The Best',
                    text2:'Explorers In The World'},

                    {img: 'slider-2', text1: 'Perfect Learned',
                    text2:'For Your Child'}
                    ]
                each slider in arr
                    .slider.col-12.relative(class=slider.class)
                        .overlay
                        .text.absolute.middle.text-center
                            h1.mt-0 #{slider.text1} #[br] #{slider.text2}
                            a(href="#" class="btn") Read more
                        .image(style='background-image: url("img/' + slider.img + '.jpg")')

            .slider-dots.absolute.middle-x
                -
                    var arr = [
                    {class: 'dot active'}, {class: 'dot'},
                    ]
                each dot in arr
                    span(class=dot.class)


        // End Slider

        // Start Features

        section.features.md-flex.flex-wrap
            -
                var arr = [
                    {
                    icon:'flaticon-woman',
                    title:'Certified Teachers',
                    text:'Even the all-powerful Pointing has no control about the blind texts it is an almost unorthographic.',
                    bgColor: 'bg-blue'
                    },
                    {
                    icon:'flaticon-reading',
                    title:'Special Education',
                    text:'Even the all-powerful Pointing has no control about the blind texts it is an almost unorthographic.',
                    bgColor: 'bg-green'
                    },
                    {
                    icon:'flaticon-study',
                    title:'Book & Library',
                    text:'Even the all-powerful Pointing has no control about the blind texts it is an almost unorthographic.',
                    bgColor: 'bg-navy'
                    },
                    {
                    icon:'flaticon-diploma',
                    title:'Certification',
                    text:'Even the all-powerful Pointing has no control about the blind texts it is an almost unorthographic.',
                    bgColor: 'bg-red'
                    }
                ]

            each feature in arr
                .col-lg-3.col-md-6
                    .feature.relative.text-center(class=feature.bgColor)
                        .icon.absolute.middle-x
                            i(class=feature.icon)
                        h3.title #{feature.title}
                        p.text #{feature.text}

        // End Features

        // Start Offers

        section.offers
            .container.md-flex

                .welcomeToKiddos.col-lg-5.col-md-6
                    h2.title Welcome to Kiddos Learning School
                    p.text On her way she met a copy. The copy warned the Little Blind Text, that where it came from it would have been rewritten a thousand times and everything that was left from its origin would be the word.
                    p.text Separated they live in Bookmarksgrove right at the coast of the Semantics, a large language ocean. A small river named Duden flows by their place and supplies it with the necessary regelialia. And if she hasn’t been rewritten, then they are still using her.

                    a(href="#" class="btn") Read more

                .whatWeOffer.col-lg-7.col-md-6
                    h2.title What We Offer
                    p.text On her way she met a copy. The copy warned the Little Blind Text, that where it came from it would have been rewritten a thousand times and everything that was left from its origin would be the word.

                    .services.flex.flex-wrap.row
                        -
                            var arr = [
                            {
                            icon:'flaticon-security',
                            title:'Safety First',
                            text:'Far far away, behind the word mountains, far from the countries Vokalia.'
                            },
                            {
                            icon:'flaticon-reading',
                            title:'Regular Classes',
                            text:'Far far away, behind the word mountains, far from the countries Vokalia.'
                            },
                            {
                            icon:'flaticon-diploma',
                            title:'Certified Teachers',
                            text:'Far far away, behind the word mountains, far from the countries Vokalia.'
                            },
                            {
                            icon:'flaticon-school',
                            title:'Sufficient Classrooms',
                            text:'Far far away, behind the word mountains, far from the countries Vokalia.'
                            },
                            {
                            icon:'flaticon-jigsaw',
                            title:'Creative Lessons',
                            text:'Far far away, behind the word mountains, far from the countries Vokalia.'
                            },
                            {
                            icon:'flaticon-soccer',
                            title:'Sports Facilities',
                            text:'Far far away, behind the word mountains, far from the countries Vokalia.'
                            },
                            ]

                        each service in arr
                            .service.col.col-lg-6
                                .flex
                                    .icon.relative
                                        i.absolute.middle(class=service.icon)
                                    .desc
                                        h3.title #{service.title}
                                        p.text #{service.text}


        // End Offers

        // Start Fixed Image Background-1

        section.fixedImageOne.relative.flex.align-items-center.justify-content-center
            .overlay
            .container.md-flex.align-items-center.justify-content-around
                .text.col-md-9
                    h2.title.my-0 Teaching Your Child Some Good Manners
                    p.desc A small river named Duden flows by their place and supplies it with the necessary regelialia. It is a paradisematic country, in which roasted parts of sentences fly into your mouth.
                .CTA
                    a(href="#" class="btn") Take a Course


        // End Fixed Image Background

        // Start Teachers

        section.ourTeachers.text-center
            .container
                .heading-section
                    h2.title Certified #[span Teachers]
                    p.desc Separated they live in. A small river named Duden flows by their place and supplies it with the necessary regelialia. It is a paradisematic country
                .teachers.md-flex.flex-wrap.row
                    -
                        var arr = [{
                        name:'Bianca Wilson',
                        job: 'TEACHER',
                        info:'I am an ambitious workaholic, but apart from that, pretty simple person.',
                        twitter: 'https://twitter.com/biancadesireej',
                        facebook: 'https://www.facebook.com/BiancaMarieWilson',
                        linkedin: 'https://uk.linkedin.com/in/bianca-wilson-444571185',
                        instagram: 'https://www.instagram.com/biancamariewilson'
                        },
                        {
                        name:'Mitch Parker',
