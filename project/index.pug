                        facebook: 'https://www.facebook.com/BiancaMarieWilson',
                        linkedin: 'https://uk.linkedin.com/in/bianca-wilson-444571185',
                        instagram: 'https://www.instagram.com/biancamariewilson'
                        }]

                    each teacher in arr
                        .teacher.col.col-lg-3.col-md-6
                            .img.relative
                                img(src='img/'+ teacher.name +'.jpg' alt=teacher.name)
                                .teacher-social.absolute
                                    a.text-orange(href=teacher.twitter) #[i.fab.fa-twitter]
                                    a.text-orange(href=teacher.facebook) #[i.fab.fa-facebook-f]
                                    a.text-orange(href=teacher.linkedin) #[i.fab.fa-linkedin]
                                    a.text-orange(href=teacher.instagram) #[i.fab.fa-instagram]
                            .info
                                h3.name.mb-0 #{teacher.name}
                                h4.job.mt-0 #{teacher.job}
                                p.desc.mt-0 #{teacher.info}

        // End Teachers

        //  ٍStart Courses

        section.ourCourses
            .container
                .heading-section
                    h2.title Our #[span Courses]
                    p.desc Separated they live in. A small river named Duden flows by their place and supplies it with the necessary regelialia. It is a paradisematic country

                .lessons.md-flex.flex-wrap.row
                    -
                        var arr = [{
                            name:'Arts Lesson',
                            time: '9:00am - 10am',
                            info:'Separated they live in. A small river named Duden flows by their place and supplies it with the necessary regelialia. It is a paradisematic country'}, {
                            name:'Language Lesson',
                            time: '11:00am - 12am',
                            info:'Separated they live in. A small river named Duden flows by their place and supplies it with the necessary regelialia. It is a paradisematic country'}, {
                            name:'Music Lesson',
                            time: '1:00am - 2am',
                            info:'Separated they live in. A small river named Duden flows by their place and supplies it with the necessary regelialia. It is a paradisematic country'}, {
                            name:'Sports Lesson',
                            time: '3:00am - 4am',
                            info:'Separated they live in. A small river named Duden flows by their place and supplies it with the necessary regelialia. It is a paradisematic country'}
                            ]

                    each lesson in arr
                        .lesson.col.col-md-6
                            .lg-flex
                                div(style='background-image: url("img/' + lesson.name + '.jpg")').img.col-lg-5
                                .info.col-lg-7
                                    h3.name #{lesson.name}
                                    p.time.mt-0 #[span Class time:] #{lesson.time}
                                    p.desc.mt-0 #{lesson.info}


        // End Courses

        // Start Experience

        section.experiences
            .container
                .heading-section
                    h2.title 20 Years of #[span Experience]
                    p.desc Separated they live in. A small river named Duden flows by their place and supplies it with the necessary regelialia. It is a paradisematic country

                .experience.md-flex.text-center
                    -
                        var arr = [
                            {name:'Certified Teachers', count: '18'},
                            {name:'Successful Kids', count: '351'},
                            {name:'Happy Parents', count: '564'},
                            {name:'Awards Won', count: '300'}
                            ]

                    each exp in arr
                        .exp.flex-equal
                            strong #{exp.count}
                            span #{exp.name}


        // Start testimonials

        section.testimonials
            .container
                .heading-section
                    h2.title What Parents #[span Says About Us]
                    p.desc Separated they live in. A small river named Duden flows by their place and supplies it with the necessary regelialia. It is a paradisematic country

                .testimonial-slider.relative
                    -
                        var arr = [{
                        name:'Bianca Wilson',
                        job: 'Mother',
                        text:'Far far away, behind the word mountains, far from the countries Vokalia and Consonantia, there live the blind texts.'}, {
                        name:'Mitch Parker',
                        job: 'Teacher',
                        text:'Far far away, behind the word mountains, far from the countries Vokalia and Consonantia, there live the blind texts.', class:'active'}, {
                        name:'Stella Smith',
                        job: 'Doctor',
                        text:'Far far away, behind the word mountains, far from the countries Vokalia and Consonantia, there live the blind texts.'}, {
                        name:'Monshe Henderson',
                        job: 'Mother',
                        text:'Far far away, behind the word mountains, far from the countries Vokalia and Consonantia, there live the blind texts.'}
                        ]

                    each testimonial in arr
                        .testimonial-block.md-flex.absolute(class=testimonial.class, class=(testimonial.name).replace(' ', "-"))
                            .img.col-md-3.relative
                                img(src='img/' + testimonial.name + '.jpg' alt=testimonial.name)
                            .text.col-md-9
                                p.testimonial #{testimonial.text}
                                p.name.mt-0 #{testimonial.name}
                                span.job.mt-0 #{testimonial.job}

                    .slider-dots.absolute.middle-x
                        -
                            var arr= [
                            {name:'Bianca Wilson'},
                            {name:'Mitch Parker', class:'active'},
                            {name:'Stella Smith'},
                            {name:'Monshe Henderson'}
                            ]
                        each testimonial in arr
                            span(class=testimonial.class, data-name=testimonial.name.replace(" ", "-"))
        // End testimonials

        // Start Form

        section.form
            .container
                .form
                    h2.mt-0 Request A Quote
                    p Far far away, behind the word mountains, far from the countries Vokalia and Consonantia, there live the blind texts.

                    form(onsubmit='false').sm-flex.flex-wrap.align-items-start.justify-content-between
                        input.col-sm-5(type='text' name='firstName' placeholder='First Name')
                        input.col-sm-5(type='text' name='lastName' placeholder='Last Name')
                        .select-opt.col-sm-5.relative
                            span.arrow.fas.fa-chevron-down.absolute

                            select(name='Course')
                                -
                                    var courseArr = [
                                    {name:'Select Your Course',false:true},
                                    {name:'Art Course'},
                                    {name:'Music Course'},
                                    {name:'Sports Course'},
                                    {name:'Language Course'}
                                    ]
                                each course in courseArr
                                    if course.false
                                        option(value='0') #{course.name}
                                    else
                                        option(value=course.name) #{course.name}
                        input.col-sm-5(type='tel' name='phone' placeholder='Phone')
                        textarea.col-sm-5(name='message' placeholder='Message' rows='1')
                        button.col-sm-5(type='submit' class='btn') Request A Quote



        // End Form

        // Start Pricing

        section.ourPricing
            .container
                .heading-section
                    h2.title Our #[span Pricing]
                    p.desc Separated they live in. A small river named Duden flows by their place and supplies it with the necessary regelialia. It is a paradisematic country

                .courses.md-flex.flex-wrap.text-center.row
                    -
                        var arr = [{
                        type:'Basic',
                        price: '$24.50',
                        time: '1mos',
                        img: 'slider-1',
                        color: 'blue',
                        info:'Far far away, behind the word mountains, far from the countries Vokalia and Consonantia, there live the blind texts.'}, {
                        type:'Standard',
                        price: '$34.50',
                        time: '2mos',
                        img: 'slider-2',
                        color: 'orange',
                        info:'Far far away, behind the word mountains, far from the countries Vokalia and Consonantia, there live the blind texts.'}, {
                        type:'Premium',
                        price: '$54.50',
                        time: '3mos',
                        img: 'fixedImage-1',
                        color: 'green',
                        info:'Far far away, behind the word mountains, far from the countries Vokalia and Consonantia, there live the blind texts.'}, {
                        type:'Platinum',
                        price: '$89.50',
                        time: '5mos',
                        img: 'Form',
                        color: 'red',
                        info:'Far far away, behind the word mountains, far from the countries Vokalia and Consonantia, there live the blind texts.'}
                        ]

                    each course in arr
                        .course-container.col.col-xl-3.col-md-6
                            .course
                                h3.type #{course.type}
                                h3
                                    span.price #{course.price}
                                    span.time / #{course.time}
                                .img(style='background-image: url("img/' + course.img + '.jpg")')
                                p.desc #{course.info}
                                a.btn(class='bg-'+course.color) Take A Course

        // End Pricing

        // Start Blog

        section.ourBlog
            .container
                .heading-section
                    h2.title Recent #[span Blog]
                    p.desc Separated they live in. A small river named Duden flows by their place and supplies it with the necessary regelialia. It is a paradisematic country

                .md-flex.flex-wrap.row
                    -
                        var arr = [{
                        name:'Skills To Develop Your Child Memory',
                        img: 'writingSkill',
                        price: '$24.50',
                        day: '27',
                        month: 'August',
                        year: '2019',
                        person: 'Visitor',
                        comments: '19',
                        info:'Far far away, behind the word mountains, far from the countries Vokalia and Consonantia, there live the blind texts.'}, {
                        name:'Skills To Develop Your Child Memory',
                        img: 'memorySkill',
                        price: '$34.50',
                        day: '6',
                        month: 'October',
                        year: '2019',
                        person: 'User',
                        comments: '1',
                        info:'Far far away, behind the word mountains, far from the countries Vokalia and Consonantia, there live the blind texts.'}, {
                        name:'Skills To Develop Your Child Memory',
                        img: 'image-1',
                        day: '19',
                        month: 'December',
                        year: '2019',
                        person: 'Admin',
                        comments: '5',
                        info:'Far far away, behind the word mountains, far from the countries Vokalia and Consonantia, there live the blind texts.'}
                        ]

                    each blog in arr
                        .blog-container.col.col-lg-4.col-md-6
                            .blog
                                .img.relative(style='background-image: url("img/' + blog.img + '.jpg")')
                                    .time.absolute.text-center.bg-navy
                                        span.day #{blog.day}
                                        span.month #{blog.month}
                                        span.year #{blog.year}
                                .text
                                    h3.name #{blog.name}
                                    p.desc #{blog.info}

                                    .flex.justify-content-between.align-items-center
                                        a.btn Read More
                                            span.fas.fa-arrow-right
                                        .data
                                            span.person.text-blue #{blog.person}
                                            span.comments.fas.fa-comment-dots  #{blog.comments}


        // End Blog

        // Start separative Images

        section.separativeImages

            .box-model.fixed
                .close.absolute.fas.fa-times.fa-2x

                .arrow-container.relative.middle
                    .arrow.absolute.arrow-right.fas.fa-caret-right.fa-3x
                    .arrow.absolute.arrow-left.fas.fa-caret-left.fa-3x

                .modelImg.absolute.middle(style='background-image: url("img/speakingSkill.jpg")')

            .img-container.flex.flex-wrap
                -
                    var arr = [
                    {name: 'Arts Lesson'},
                    {name: 'memorySkill'},
                    {name: 'speakingSkill'},
                    {name: 'image-1'}
                        ]
                each img in arr
                    .img.col-md-3(style='background-image: url("img/' + img.name + '.jpg")')


        // End separative Images

        include pug/footer

        include pug/scripts